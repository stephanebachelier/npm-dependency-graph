{
  "name": "npm-dependency-graph",
  "version": "2.0.1",
  "description": "NPM module dependency graph",
  "main": "src/index.js",
  "author": "St√©phane Bachelier <stephane.bachelier@gmail.com>",
  "license": "MIT",
  "bin": {
    "deps-graph": "./bin/graph/index.js"
  },
  "engines": {
    "node": ">=12.16.3"
  },
  "scripts": {
    "lint": "standard src/**/*.js | snazzy",
    "lint:ci": "standard src/**/*.js",
    "format": "prettier-standard --format"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "d3": "^6.3.1",
    "d3-node": "^2.2.2",
    "d3-tree": "^1.0.24",
    "debug": "^4.1.1",
    "fs-extra": "^9.0.1",
    "jsdom": "^16.4.0",
    "lodash": "^4.17.19",
    "meow": "^8.0.0",
    "mnemonist": "^0.38.1",
    "package-json": "^6.5.0",
    "promise.allsettled": "^1.0.4",
    "sharp": "^0.26.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/npm": "^7.0.5",
    "babel-eslint": "^10.1.0",
    "cz-conventional-changelog": "^3.2.0",
    "git-cz": "^4.6.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "npm-merge-driver": "^2.3.5",
    "prettier": "^2.0.5",
    "prettier-standard": "^16.4.1",
    "semantic-release": "^17.3.6",
    "snazzy": "^8.0.0",
    "standard": "^14.3.4",
    "yaml-lint": "^1.2.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --env HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && git add --patch",
      "post-commit": "git update-index -g",
      "pre-push": "yarn run lint"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn lint:ci --fix",
      "prettier-standard --staged"
    ],
    "*.json": [
      "jsonlint",
      "prettier --write"
    ],
    "*.yaml": [
      "yamllint",
      "prettier --write"
    ]
  }
}
